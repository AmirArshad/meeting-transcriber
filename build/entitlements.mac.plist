<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow microphone access for recording -->
	<key>com.apple.security.device.audio-input</key>
	<true/>

	<!-- Disable camera (we don't need it) -->
	<key>com.apple.security.device.camera</key>
	<false/>

	<!-- Allow JIT for Python/ML frameworks -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow unsigned executable memory (required for Python and ML libraries) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Disable library validation (required for bundled Python and dependencies) -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>

	<!-- Allow dyld environment variables (required for Python runtime) -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>

	<!-- Disable App Sandbox (required for full system access) -->
	<key>com.apple.security.app-sandbox</key>
	<false/>

	<!-- Network client access (for updates and model downloads) -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- File access (read/write user-selected files) -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>
</dict>
</plist>
