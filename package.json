{
  "name": "meeting-transcriber",
  "version": "1.7.16",
  "description": "AI-powered meeting transcription with desktop audio capture",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "node -e \"const fs = require('fs'); if(fs.existsSync('dist')) { fs.rmSync('dist', {recursive:true,force:true}); console.log('Cleaned dist/'); }\"",
    "prepare-build": "npm run clean && node build/prepare-resources.js",
    "build": "npm run prepare-build && electron-builder build --win --publish never",
    "build:dir": "npm run prepare-build && electron-builder build --win --dir",
    "build:mac": "npm run prepare-build && electron-builder build --mac --publish never",
    "build:mac:dir": "npm run prepare-build && electron-builder build --mac --dir"
  },
  "keywords": [
    "transcription",
    "whisper",
    "meeting",
    "audio"
  ],
  "author": "Meeting Transcriber Team",
  "license": "MIT",
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.meetingtranscriber.app",
    "productName": "Meeting Transcriber",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "binaries": ["bin/audiocapture-helper"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Meeting Transcriber needs microphone access to record your voice during meetings.",
        "NSAppleMusicUsageDescription": "Meeting Transcriber does not access your music library.",
        "NSCameraUsageDescription": "Meeting Transcriber does not use your camera.",
        "NSScreenCaptureUsageDescription": "Meeting Transcriber needs screen recording permission to capture system audio (desktop audio) using ScreenCaptureKit. No screen video is recorded, only audio."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Meeting Transcriber",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE.txt",
      "differentialPackage": true,
      "warningsAsErrors": false,
      "displayLanguageSelector": false
    },
    "compression": "store",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "electronLanguages": [
      "en-US",
      "en",
      "es",
      "fr",
      "de",
      "zh-CN",
      "ja"
    ],
    "files": [
      "src/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "build/resources/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/resources/ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "build/resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/iconTemplate.png",
        "to": "iconTemplate.png"
      },
      {
        "from": "build/iconTemplate@2x.png",
        "to": "iconTemplate@2x.png"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  }
}
